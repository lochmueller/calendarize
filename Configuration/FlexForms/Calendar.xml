<T3DataStructure>
	<meta type="array">
		<langChildren type="integer">0</langChildren>
		<langDisable type="integer">1</langDisable>
	</meta>
	<sheets>
		<main>
			<ROOT>
				<TCEforms>
					<sheetTitle>Main configuration</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- View -->
					<switchableControllerActions>
						<TCEforms>
							<label>Mode</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Normal</numIndex>
										<numIndex index="1">--div--</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">List + Detail</numIndex>
										<numIndex index="1">Calendar->list;Calendar->detail</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">List</numIndex>
										<numIndex index="1">Calendar->list</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Detail</numIndex>
										<numIndex index="1">Calendar->detail</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Search</numIndex>
										<numIndex index="1">Calendar->search</numIndex>
									</numIndex>
									<numIndex index="5">
										<numIndex index="0">Special</numIndex>
										<numIndex index="1">--div--</numIndex>
									</numIndex>
									<numIndex index="6">
										<numIndex index="0">Year</numIndex>
										<numIndex index="1">Calendar->year</numIndex>
									</numIndex>
									<numIndex index="7">
										<numIndex index="0">Month</numIndex>
										<numIndex index="1">Calendar->month</numIndex>
									</numIndex>
									<numIndex index="8">
										<numIndex index="0">Week</numIndex>
										<numIndex index="1">Calendar->week</numIndex>
									</numIndex>
									<numIndex index="9">
										<numIndex index="0">Day</numIndex>
										<numIndex index="1">Calendar->day</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<!-- Calendar configuration -->
					<settings.configuration>
						<TCEforms>
							<label>Configuration</label>
							<config>
								<type>select</type>
								<itemsProcFunc>HDNET\Calendarize\UserFunction\PluginConfiguration->addConfig</itemsProcFunc>
							</config>
						</TCEforms>
					</settings.configuration>

					<!-- startingpoint -->
					<settings.startingpoint>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.xml:LGL.startingpoint</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.startingpoint>

					<!-- recursive -->
					<settings.recursive>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.xml:LGL.recursive</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="1" type="array">
										<numIndex index="0">Inherit</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.0</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.2</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.3</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.4</numIndex>
										<numIndex index="1">4</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xml:recursive.I.5</numIndex>
										<numIndex index="1">250</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.recursive>

					<!-- Limit Start -->
					<settings.limit>
						<TCEforms>
							<label>Limit</label>
							<displayCond>
								<OR>
									<numIndex>FIELD:switchableControllerActions:=:Calendar->list;Calendar->detail</numIndex>
									<OR>
										<numIndex>FIELD:switchableControllerActions:=:Calendar->list</numIndex>
									</OR>
								</OR>
							</displayCond>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.limit>

					<!-- Hide pagination -->
					<settings.hidePagination>
						<TCEforms>
							<label>Hide pagination</label>
							<displayCond>
								<OR>
									<numIndex>FIELD:switchableControllerActions:=:Calendar->list;Calendar->detail</numIndex>
									<OR>
										<numIndex>FIELD:switchableControllerActions:=:Calendar->list</numIndex>
									</OR>
								</OR>
							</displayCond>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.hidePagination>
				</el>
			</ROOT>
		</main>
		<pages>
			<ROOT>
				<TCEforms>
					<sheetTitle>Page configuration</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- PID Detail Page -->
					<settings.detailPid>
						<TCEforms>
							<label>Detail PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.detailPid>

					<!-- PID list Page -->
					<settings.listPid>
						<TCEforms>
							<label>List PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.listPid>

					<!-- PID year Page -->
					<settings.yearPid>
						<TCEforms>
							<label>Year PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.yearPid>

					<!-- PID month Page -->
					<settings.monthPid>
						<TCEforms>
							<label>Month PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.monthPid>

					<!-- PID week Page -->
					<settings.weekPid>
						<TCEforms>
							<label>Week PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.weekPid>

					<!-- PID day Page -->
					<settings.dayPid>
						<TCEforms>
							<label>Day PID</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.dayPid>
				</el>
			</ROOT>
		</pages>
	</sheets>
</T3DataStructure>